{
  "compilerOptions": {
    "target": "ESNext",
    "module": "esnext",
    "outDir": "dist",
    "lib": ["esnext", "dom"],
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true,
    "allowJs": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
